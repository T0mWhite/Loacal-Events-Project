<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Event:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="event-title">Event Title:</label>
        <input class="form-input" type="text" id="event-title" name="event-title" />
      </div>
      <div class="form-group">
        <label for="event-time">Event Time:</label>
        <textarea class="form-input" id="event-time" name="event-time"></textarea>
      </div>
      <div class="form-group">
        <label for="event-date">Event Date:</label>
        <textarea class="form-input" id="event-date" name="event-date"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if events.length}}
  <div class="col-md-6 project-list">
    <h3>You're hosting:</h3>

    {{#each events as |event|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{event.id}}">{{event.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
