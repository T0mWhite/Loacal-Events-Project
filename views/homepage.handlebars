<!-- Loop over each object in the projects array -->
{{#each events as |event| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/events/{{event.id}}">{{event.title}}</a>
    </h2>
  <div class="col-md-7">
    <p>
      {{event.event_date}}
      {{event.event_time}}
    </p>
  </div>
  <div>
    <p>Created by {{user.firstName}} on {{format_date event.date_created}}</p>
  </div>
</div>
{{/each}}
