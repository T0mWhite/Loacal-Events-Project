<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.0.firstName}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Event:</h3>

    <form class="form new-event-form">
      <div class="form-group">
        <label for="event-title">Event Title:</label>
        <input
          class="form-input"
          type="text"
          id="event-title"
          name="event-title"
        />
      </div>
      <div class="form-group">
        <label for="event-time">Event Time:</label>
        <input type="time" id="event-time" name="event-time" />
      </div>
      <div class="form-group">
        <label for="event-date">Event Date:</label>
        <input
          type="date"
          id="event-date"
          name="event-date"
          value=""
          min=""
          max="2029-12-31"
        />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary event-list">Create</button>
      </div>
    </form>
  </div>

  {{#if events.length}}
    <div class="col-md-6 event-list">
      <h3>You're hosting:</h3>

      {{#each events as |event|}}
          {{! Display events belonging to user }}
          <div class="row mb-2">
            <div class="col-md-8">
              <h4><a
                  href="/events/{{event.id}}"
                  data-id="{{event.title}}"
                >{{event.title}}</a></h4>
            </div>
            {{! Remove event }}
        <div class="event-delete">
            <div class="col-md-4">
              <button
                class="btn btn-sm btn-danger deleteBtn"
                data-id="{{event.id}}"
              >Remove Event</button>
            </div>
        </div>
            {{! Update event }}
            <div>
              <form class="form new-event-form">
                <div class="form-group">
                  <label for="event-title-edit">Event Title:</label>
                  <input
                    id="event-title-edit"
                    class="form-input"
                    type="text"
                    name="event-title"
                    value="{{event.title}}"
                  />
                </div>
                <div class="form-group">
                  <label for="event-time-edit">Event Time:</label>
                  <input
                    type="time"
                    id="event-time-edit"
                    name="event-time"
                    value={{event.event_time}}
                  />
                </div>
                <div class="form-group">
                  <label for="event-date-edit">Event Date:</label>
                  <input
                    type="date"
                    id="event-date-edit"
                    name="event-date"
                    value={{event.event_date}}
                    min=""
                    max="2029-12-31"
                  />
                </div>
                <div class="form-group">
                  <button
                    id="updateBtn"
                    type="submit"
                    class="btn btn-primary"
                    data-id="{{event.id}}"
                  >Edit</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>