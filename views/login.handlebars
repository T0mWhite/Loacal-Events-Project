<div class="container green">
  <div class="row">


    <div class="container teal darken-1 m6">
      <h2>Login</h2>
      <form class="form login-form teal lighten-2">
        <div class="input-field col s12">
          <input id="email" type="email" class="validate" />
          <label for="email">Email</label>
          {{! <span class="helper-text" data-error="wrong" data-success="right">Helper
          text</span> }}
        </div>

        <div class="input-field col s12">
          <input id="password" type="password" class="validate" />
          <label for="password">Password</label>
        </div>
        <button
          class="btn waves-effect waves btn-large"
          type="submit"
          name="action"
        >Submit
          <i class="material-icons right">send</i>
        </button>
      </form>
    </div>

<div class="divider"></div>
<div class="divider"></div>
<div class="divider"></div>
<div class="divider"></div>

    <div class="container teal m6">
      <h2>Signup</h2>
      <form class="form signup-form">
        <div class="row">
          <form class="col s6">
            <div class="row">
              <div class="col s6">
                <input
                  placeholder="First Name"
                  id="first_name"
                  type="text"
                  class="validate"
                />
                <label for="first_name">First Name</label>
              </div>
              <div class="input-field col s12">
                <input id="last_name" type="text" class="validate" />
                <label for="last_name">Last Name</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="password" type="password" class="validate" />
                <label for="password">Password</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="email" type="email" class="validate" />
                <label for="email">Email</label>
              </div>
            </div>
            <div class="row">
            <button
              class="btn waves-effect waves btn-large"
              type="submit"
              name="action"
            >Submit
              <i class="material-icons right">send</i>
            </button>
            </div>
          </form>
        </div>
      </form>
    </div>
  </div>
</div>

